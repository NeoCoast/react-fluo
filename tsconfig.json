{
  "compilerOptions": {
		"target": "es5",
		"lib": [
				"dom",
				"dom.iterable",
				"esnext"
		],
		"rootDir": "src",
		"outDir": "./dist",
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": false,
		"jsx": "react-jsx",
  },
  "include": [
    "src",
		"custom.d.ts"
  ],
	"exclude": [
    "dist",
    "node_modules"
  ],
}
